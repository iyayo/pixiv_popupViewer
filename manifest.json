{
  "name": "pixiv ポップアップビューアー",
  "version": "1.6.5",
  "manifest_version": 3,
  "description": "pixivのイラスト・マンガ・小説を、ページ移動せずにポップアップで表示する拡張機能です。",
  "icons" : {
    "16" : "icon/icon16.png",
    "32" : "icon/icon32.png",
    "48" : "icon/icon48.png",
    "128" : "icon/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["js/script.js"],
      "css": ["css/script.css"],
      "matches": ["https://www.pixiv.net/*"]
    }
  ],
  "background": {
    "service_worker": "js/service_worker.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset",
      "enabled": false,
      "path": "json/rules.json"
    }]
  },
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://www.pixiv.net/*"
  ],
  "options_ui": {
    "page": "html/options.html"
  },
  "commands": {
    "expand": {
      "description": "最大化/縮小する",
      "global": false
    },
    "prev_work": {
      "description": "前の作品を表示する",
      "global": false
    },
    "next_work": {
      "description": "次の作品を表示する",
      "global": false
    },
    "add_bookmark": {
      "description": "ブックマークに追加する",
      "global": false
    },
    "close_popup": {
      "description": "ポップアップを閉じる",
      "global": false
    }
  }
}
